@model List<info>

@{
    ViewData["Title"] = "List Of Profiles";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-9">
                <h1 class="mt-2">List of profiles</h1>
            </div>
            <div class="col-3">
                <a class="btn btn-outline-info   form-control" asp-action="Create"><i class="bi bi-plus-square-fill"></i>    Add Profile</a>
            </div>
        </div>
        
        <hr />
        <div class="table-responsive">
            <table class="table table-hover table-light">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>URL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var info in Model)
                    {
                        <tr>
                            <td>@info.Title</td>
                            <td><a href="@info.Url" target="_blank">@info.Url</a></td>
                            <td>
                                
                                <a href="@Url.Action("Edit", "Info", new { id = info.id })" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-pencil-square"></i> 
                                </a>
                        
                                <a href="@Url.Action("Delete", "Info", new { id = info.id })" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> 
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
